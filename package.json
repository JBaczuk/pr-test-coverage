{
  "name": "pr-test-coverage",
  "version": "1.0.4",
  "description": "A Github Action to report the test coverage of changed files in a pull request",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "github-action",
    "test-coverage",
    "lcov",
    "pull-request"
  ],
  "author": "Jordan Baczuk",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@actions/artifact": "^2.1.7",
    "lcov-parse": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@types/lcov-parse": "^1.0.0"
  },
  "packageManager": "yarn@4.9.2+sha512.1fc009bc09d13cfd0e19efa44cbfc2b9cf6ca61482725eb35bbc5e257e093ebf4130db6dfe15d604ff4b79efd8e1e8e99b25fa7d0a6197c9f9826358d4d65c3c"
}
